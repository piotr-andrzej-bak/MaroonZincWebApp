@page
@model MaroonZincWebApp.Pages.Categories.DeleteModel

<form method="post">
	<input hidden asp-for="@Model.Category.ID" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete category</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control disabled"/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" />
		</div>
		<button type="submit" class="btn btn-outline-danger" style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-outline-primary" style="width:150px">Back to list</a>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}