@page
@model MaroonZincWebApp.Pages.Categories.IndexModel
@{
}

<partial name="_Notification" />


	<div class="container p-3">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">Category</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-page="create" class="btn btn-outline-success">
					<i class="bi bi-plus-square"></i> &nbsp; Create
				</a>
			</div>
		</div>
		<br /><br />



	@if (Model.Categories.Count() > 0)
	{
				<table class="table table-bordered table-striped" style="width:100%">
					<thead>
						<tr>
							<th>
								Category Name
							</th>
							<th>
								Display Order
							</th>
						</tr>
					</thead>
					<tbody>
				@foreach (var obj in Model.Categories)
				{
								<tr>

									<td width="40%">@obj.Name</td>
									<td width="30%">@obj.DisplayOrder</td>
									<td class="text-center">
										<div class="text-center w-75 btn-group">
											<a asp-page="Edit" asp-route-id="@obj.ID" class="btn btn-outline-primary mx-2">
												<i class="bi bi-pencil-square"></i>
											</a>
											<a asp-page="Delete" asp-route-id="@obj.ID" class="btn btn-outline-danger mx-2">
												<i class="bi bi-trash-fill"></i>
											</a>
										</div>
									</td>
								</tr>
				}
					</tbody>
				</table>

	}

	else
	{
				<div class="container p-3">
				<div class="row pt-4">
					<div class="col-6">
						<h4 class="text-danger">Category is empty</h4>
					</div>
				</div>
				</div>

	}
	</div>
