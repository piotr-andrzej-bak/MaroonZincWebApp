@page
@model MaroonZincWebApp.Pages.Categories.CreateModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control"/>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-outline-success" style="width:150px;">Create</button>
		<a asp-page="Index" class="btn btn-outline-primary" style="width:150px">Back to list</a>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}